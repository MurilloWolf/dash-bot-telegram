{
  "name": "dash-bot",
  "version": "0.3.0",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "dotenv -e .env.development -- tsx watch src/bot.ts",
    "build": "node scripts/build-production.js",
    "start": "node dist/bot.js",
    "setup": "./scripts/setup-dev.sh",
    "deploy": "./scripts/deploy-fly.sh",
    "prisma": "dotenv -e .env.development -- prisma migrate dev",
    "studio:prod": "dotenv -e .env.production -- prisma studio",
    "studio:dev": "dotenv -e .env.development -- prisma studio",
    "db": "dotenv -e .env.development -- npx tsx src/core/scripts/seedRaces.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "eslint . --ext .ts,.js,.mts,.cts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.js,.mts,.cts --fix",
    "lint:report": "eslint . --ext .ts,.js,.mts,.cts --format json --output-file eslint-report.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "db:setup:test": "dotenv -e .env.test -- prisma migrate reset --force && dotenv -e .env.test -- prisma migrate deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^8.0.0",
    "node-telegram-bot-api": "^0.66.0",
    "sqlstring": "^2.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.4",
    "@types/node-telegram-bot-api": "^0.64.9",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "prettier": "^3.6.2",
    "prisma": "^6.11.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "typescript-transform-paths": "^3.5.5",
    "vitest": "^3.2.4"
  }
}
