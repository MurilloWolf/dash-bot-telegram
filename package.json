{
  "name": "dash-bot",
  "version": "0.3.1",
  "type": "module",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "dotenv -e .env.development -- tsx watch src/bot.ts",
    "dev:watchdog": "node scripts/bot-watchdog.js",
    "build": "node scripts/build-production.js",
    "start": "node dist/bot.js",
    "setup": "./scripts/setup-dev.sh",
    "deploy": "./scripts/deploy-fly.sh",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "eslint . --ext .ts,.js,.mts,.cts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.js,.mts,.cts --fix",
    "lint:report": "eslint . --ext .ts,.js,.mts,.cts --format json --output-file eslint-report.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "setup:api": "./scripts/setup-api-endpoints.sh",
    "health:check": "curl -f http://localhost:3001/health || curl -f https://dash-bot-telegram.fly.dev/health",
    "health:detailed": "curl -f http://localhost:3001/health/detailed || curl -f https://dash-bot-telegram.fly.dev/health/detailed",
    "health:test": "./scripts/test-bot-health.sh",
    "alerts:quick": "./scripts/quick-alert-test.sh",
    "alerts:test": "./scripts/test-alerts.sh",
    "alerts:interactive": "node scripts/test-alerts-interactive.js",
    "simulate:failure": "./scripts/simulate-failure.sh",
    "test:monitoring": "./scripts/test-monitoring-complete.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^5.0.3",
    "axios": "^1.11.0",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^8.0.0",
    "express": "^5.1.0",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/axios": "^0.14.4",
    "@types/node": "^24.0.4",
    "@types/node-telegram-bot-api": "^0.64.9",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "typescript-transform-paths": "^3.5.5",
    "vitest": "^3.2.4"
  }
}
